<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_item_list">

    <TextView
        android:id="@+id/tv_item_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:ems="5"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id value"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tv_item_label1"

        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="key:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/tv_item_label1"
        android:layout_alignParentLeft="true"
        android:ems="5"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="key value"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignTop="@id/tv_item_label2"
        android:layout_toEndOf="@id/tv_item_label2"

        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/tv_item_label2"
        android:layout_alignParentLeft="true"
        android:ems="5"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value value"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignTop="@id/tv_item_label3"
        android:layout_toEndOf="@id/tv_item_label3"

        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="creation:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/tv_item_label3"
        android:layout_alignParentLeft="true"
        android:ems="5"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="key value"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignTop="@id/tv_item_label4"
        android:layout_toEndOf="@id/tv_item_label4"

        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"/>


    <TextView
        android:id="@+id/tv_item_label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total count:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/tv_item_label4"
        android:layout_alignParentLeft="true"
        android:ems="5"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="count value"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignTop="@id/tv_item_label5"
        android:layout_toEndOf="@id/tv_item_label5"

        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"
         />


</RelativeLayout>